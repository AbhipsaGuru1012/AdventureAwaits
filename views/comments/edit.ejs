<%- include("../partials/header") %>
<div class="container">
		<h1 style="text-align:center;">
			Edit Comment
		</h1>
		<div style="width:30%; margin:25px auto;">
			
			<form action="/campgrounds/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT" method="POST" novalidate class="validated-form">
				<div class="form-group">
					<input class="form-control" type="text" name="comment[text]" value="<%=comment.text%>" required>
					<div class="valid-feedback">
						Looks good!
					</div>
				</div>
				
				
				<div class="form-group">
					<button class="btn btn-lg btn-info btn-block">
						Submit!
					</button>
					
				</div>
				
			</form>

			<a href="/campgrounds">Go Back</a>
		</div>
	</div>

<script src="/Javascripts/validation.js"></script>
<%- include("../partials/footer") %>